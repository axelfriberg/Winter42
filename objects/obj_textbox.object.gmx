            <kind>1</kind>
            <string>///Draw the string and the box
    draw_set_alpha( 0.5);
    draw_roundrect_colour(x, y, x+width, y+height, c_black, c_black, false);
    draw_set_alpha( 1 );
    
    // Set the color to white
    draw_set_color( c_white );
    
    // Are we past the width? Insert the line break
    // This has to be before the last_spacevar or it won't work
    if(string_width ( print_msg ) &gt; width - padding_x - padding_x )
    {
        //Remove the space and replace it with a line breck
        message = string_delete(message, last_space, 1 );
        message = string_insert("#", message, last_space);
        ds_list_add( textbox_ds_list, last_space + 1 );
    }
    
    //Make sure we have not reach the end of the message
    if (count &lt; string_length( message ))
    {
        if(string_char_at( message, count ) == " ") last_space = count;
        count++;
    }
    
    //Did we go past the bottom? Move up a line
    if( string_height ( print_msg ) &gt; height - padding_y ) line++;
    
    print_msg = string_copy( message, ds_list_find_value( textbox_ds_list, line), count - ds_list_find_value (textbox_ds_list, line));
    
    draw_text(x+padding_x, y+padding_y, print_msg);
</string>
